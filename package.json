{
  "name": "@srivathsav03/react-native-ble-plx",
  "version": "4.0.4",
  "packageManager": "pnpm@9.0.0",
  "description": "React Native Bluetooth Low Energy library",
  "main": "src/index",
  "module": "src/index",
  "types": "src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "plugin/build",
    "app.plugin.js",
    "*.podspec",
    "!lib/typescript/example",
    "!lib/typescript/example-expo",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "build": "babel src/ -d lib/",
    "test": "pnpm test:package ; pnpm test:example",
    "test:package": "jest --config jest.config.js --passWithNoTests",
    "test:example": "jest --config example/jest.config.js --passWithNoTests",
    "docs": "documentation build src/index.js -o docs --config documentation.yml -f html",
    "typecheck": "tsc --noEmit",
    "flow": "flow",
    "lint": "flow && eslint \"**/*.{js,ts,tsx}\" && documentation lint index.js && pnpm typecheck",
    "prepack": "bob build",
    "release": "release-it",
    "example": "pnpm --filter example",
    "build:android": "cd example/android && ./gradlew assembleDebug --no-daemon --console=plain -PreactNativeArchitectures=arm64-v8a",
    "test:android": "cd example/android && ./gradlew assembleDebug --no-daemon --console=plain -PreactNativeArchitectures=arm64-v8a",
    "build:ios": "cd example/ios && xcodebuild -workspace BlePlxExample.xcworkspace -scheme BlePlxExample -configuration Debug -sdk iphonesimulator CC=clang CPLUSPLUS=clang++ LD=clang LDPLUSPLUS=clang++ GCC_OPTIMIZATION_LEVEL=0 GCC_PRECOMPILE_PREFIX_HEADER=YES ASSETCATALOG_COMPILER_OPTIMIZATION=time DEBUG_INFORMATION_FORMAT=dwarf COMPILER_INDEX_STORE_ENABLE=NO",
    "test:ios": "cd example/ios && xcodebuild -workspace BlePlxExample.xcworkspace -scheme BlePlxExample -configuration Debug -sdk iphonesimulator ASSETCATALOG_COMPILER_OPTIMIZATION=time DEBUG_INFORMATION_FORMAT=dwarf COMPILER_INDEX_STORE_ENABLE=NO",
    "test:expo": "cd example-expo && pnpm install && npx expo prebuild",
    "bootstrap": "pnpm install && cd example && pnpm install && pnpm pods",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build plugin/build lib",
    "build:plugin": "tsc --build plugin",
    "clean:plugin": "del-cli plugin/build",
    "test:plugin": "jest --config plugin/jest.config.js",
    "prepare": "npm run build:plugin",
    "lint:plugin": "eslint plugin/src/*"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "React",
    "Native",
    "Bluetooth",
    "Low",
    "Energy",
    "BLE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Srivathsav-max/react-native-ble-plx.git"
  },
  "author": "dotintent (https://withintent.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Srivathsav-max/react-native-ble-plx/issues"
  },
  "homepage": "https://github.com/Srivathsav-max/react-native-ble-plx#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-flow": "^7.25.9",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@evilmartians/lefthook": "^1.9.4",
    "@expo/config-plugins": "^9.0.14",
    "@react-native/eslint-config": "^0.83.0",
    "@react-navigation/native": "^7.0.15",
    "@react-navigation/native-stack": "^7.2.1",
    "@release-it/conventional-changelog": "^9.0.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.2",
    "@typescript-eslint/parser": "^8.18.2",
    "babel-plugin-syntax-hermes-parser": "^0.25.1",
    "commitlint": "^19.6.1",
    "del-cli": "^6.0.0",
    "documentation": "14.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "expo-module-scripts": "^4.0.4",
    "flow-bin": "^0.259.1",
    "hermes-eslint": "^0.25.1",
    "jest": "^29.7.0",
    "pod-install": "^0.2.2",
    "prettier": "^3.4.2",
    "react": "19.0.0",
    "react-native": "0.77.0",
    "react-native-base64": "^0.2.1",
    "react-native-builder-bob": "^0.35.2",
    "react-native-safe-area-context": "^5.1.1",
    "react-native-toast-message": "^2.2.1",
    "release-it": "^18.1.2",
    "styled-components": "^6.1.14",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "@types/react": "^19.0.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/integration-tests",
      "<rootDir>/example/node_modules",
      "<rootDir>/example-expo/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
